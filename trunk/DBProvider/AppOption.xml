<?xml version="1.0" encoding="utf-8"?>
<option>
<sqlsrv>127.0.0.1,1433</sqlsrv>       <!--数据库服务器地址,端口-->
<sqldb>mydb</sqldb>                   <!--数据库--> 
<sqluser>sa</sqluser>                 <!--数据库用户名--> 
<sqlpw>sa</sqlpw>                     <!--数据库密码--> 
<dbconn>64</dbconn>                   <!--设置联接池 最大64 最小1--> 
<port>10003</port>                    <!--中间层服务端口号--> 
<maxsend>512</maxsend>                <!--中间层最大并发send--> 
<depend>MSSQLSERVER</depend>          <!--设置服务启动依赖,为空表示不需要启动依赖-->
</option>
